---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Goldfish Association - Path to Aquatic Enlightenment" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Goldfish Association</title>
  </head>
  <body class="bg-orange-50">
    <nav class="bg-orange-600 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold">Goldfish Association</a>
        <div class="space-x-6">
          <a href="/teachings" class="hover:text-orange-200">Teachings</a>
          <a href="/practices" class="hover:text-orange-200">Practices</a>
          <a href="/events" class="hover:text-orange-200">Events</a>
          <a href="/contact" class="hover:text-orange-200">Contact</a>
        </div>
      </div>
    </nav>
    <slot />
    <footer class="bg-orange-800 text-white p-8 mt-12">
      <div class="container mx-auto text-center">
        <p>&copy; 2024 Goldfish Association. Path to Aquatic Enlightenment.</p>
      </div>
    </footer>
  </body>
</html>